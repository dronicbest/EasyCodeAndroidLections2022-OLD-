<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".presentation.MainActivity">

    <edu.dronicbest.jokeapp.presentation.custom_views.FavoriteDataView
        android:id="@+id/jokeFavoriteDataView"
        custom:actionButtonText="@string/get_joke"
        custom:checkBoxText="@string/show_favorite_joke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <edu.dronicbest.jokeapp.presentation.custom_views.FavoriteDataView
        android:id="@+id/quoteFavoriteDataView"
        custom:actionButtonText="@string/get_quote"
        custom:checkBoxText="@string/show_favorite_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>